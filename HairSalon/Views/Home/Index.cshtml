@{
  Layout = "_Layout";
}
<h3>
  Eau Claire's Salon
  <small class="text-muted">Stylist & Client Management System</small>
</h3>
<br>
<h4>Search For A Stylist:</h4>
@using (Html.BeginForm("Search", "Stylists"))
{
  @Html.TextBox("Name", null,  new { @class = "form-control" , @placeholder = "Name" })
  <input type="submit" value="Search" class="btn btn-outline-dark"/>
}
<h4>Search For A Client:</h4>
@using (Html.BeginForm("Search", "Clients"))
{
  @Html.TextBox("Name", null, new {@class = "form-control" , @placeholder = "Name" })
  
  <input type="submit" value="Search" class="btn btn-outline-dark"/>
}

<p>@Html.ActionLink("See All Stylists", "Index", "Stylists", null, new {@class = "btn btn-dark"})</p>
<p>@Html.ActionLink("See All Clients", "Index", "Clients", null, new {@class = "btn btn-dark"})</p>
