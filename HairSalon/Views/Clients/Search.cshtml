@{
Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Search Results</h1>

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }
</ul>

@if (Model.Count == 0)
{
  <p>There are no client names that match this search.</p>
}

<p>@Html.ActionLink("Add New Client", "Create", "Clients", null, new {@class = "btn btn-dark"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-dark"})</p>