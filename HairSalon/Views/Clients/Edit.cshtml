@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3 class="jumbotron jumbotron-fluid" id="heading">Edit</h3>

<h4>Edit this client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.PhoneNumber)
  @Html.TextBoxFor(model => model.PhoneNumber)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" class="btn btn-outline-dark"/>
}
<p>@Html.ActionLink("Back To Client List", "Index", null, new {@class = "btn btn-outline-dark"})</p>