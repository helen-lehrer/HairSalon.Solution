@{
Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Search Results</h1>

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

@if (Model.Count == 0)
{
  <p>There are no stylist names that match this search.</p>
}

<p>@Html.ActionLink("Add New Stylist", "Create", "Stylists", null, new {@class = "btn btn-dark"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-dark"})</p>