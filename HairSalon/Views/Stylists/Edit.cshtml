@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Speciality)
  @Html.EditorFor(model => model.Speciality)

  <input type="submit" value="Save" class="btn btn-outline-dark"/>
}
<p>@Html.ActionLink("Back To Stylist List", "Index", null, new {@class = "btn btn-dark"})</p>