@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Speciality)
  @Html.TextBoxFor(model => model.Speciality)

  <input type="submit" value="Add New Stylist" class="btn btn-outline-dark" />
}
<p>@Html.ActionLink("Show All Stylists", "Index", "Stylists", null, new {@class = "btn btn-dark"})</p>